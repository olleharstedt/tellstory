<?xml version="1.0" encoding="UTF-8"?>
<story namespace="gender">
  <macro name="gender">
    <alt setFlag="man">man</alt>
    <alt setFlag="woman">woman</alt>
  </macro>

  <variable name="def">
    <alt>{#gender}</alt>
  </variable>

  <variable name="he">
    <alt ifSet="man">he</alt>
    <alt ifSet="woman">she</alt>
  </variable>

  <!--
  <sentence>{he}</sentence>
