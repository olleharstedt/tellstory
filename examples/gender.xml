<?xml version="1.0" encoding="UTF-8"?>
<story namespace="gender">
  <macro name="gender">
    <alt setFlag="gender_man">man</alt>
    <alt setFlag="gender_woman">woman</alt>
  </macro>

  <variable name="def">
    <alt>{#gender}</alt>
  </variable>

  <variable name="he">
    <alt ifSet="gender_man">he</alt>
    <alt ifSet="gender_woman">she</alt>
  </variable>

  <!--
  <sentence>{he}</sentence>
