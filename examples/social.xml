<?xml version="1.0" encoding="UTF-8"?>
<story namespace="social">
  <!-- Define two dice: d6 and d100 -->
  <dice name="d6" sides="6" />
  <dice name="dAge" sides="100" />

  <!-- Decide gender -->
  <variable name="gender">
    <alt>Man</alt>
    <alt>Woman</alt>
  </variable>

  <variable name="class">
      <alt>Homeless</alt>
      <alt>Poor</alt>
      <alt>Middle class</alt>
      <alt>Rich</alt>
      <alt>Super rich</alt>
  </variable>

  <variable name="contacts">
      <alt>Isolated</alt>
      <alt>Few friends</alt>
      <alt>Many friends</alt>
      <alt>Knows everyone</alt>
  </variable>

  <variable name="deathreason">
      <alt>cancer</alt>
      <alt>heart attach</alt>
      <alt>brain injury</alt>
      <alt>shot wound</alt>
      <alt>fell</alt>
      <alt>old age</alt>
      <alt>drug overdose</alt>
  </variable>

  <variable name="health">
      <alt>Near dead, {deathreason}</alt>
      <alt>Poor</alt>
      <alt>Obese</alt>
      <alt>Overweight</alt>
      <alt>Normal</alt>
      <alt>Fit</alt>
      <alt>Professional athlet</alt>
  </variable>

  <variable name="specnative">
      <alt>North-American</alt>
      <alt>South-American</alt>
      <alt>Roma</alt>
      <alt>Inuit</alt>
      <alt>Australian</alt>
      <alt>Mongol</alt>
  </variable>

  <variable name="race">
      <alt>European</alt>
      <alt>African</alt>
      <alt>Arab</alt>
      <alt>Asian</alt>
      <alt>Native {specnative}</alt>
  </variable>

  <variable name="atheist">
      <alt>Atheist</alt>
      <alt>Materialist</alt>
      <alt>Existentialist</alt>
      <alt>Agnostic</alt>
  </variable>

  <macro name="fanatic">
      <alt></alt>
      <alt></alt>
      <alt></alt>
      <alt></alt>
      <alt></alt>
      <alt>but doesn't really care</alt>
      <alt>and devout</alt>
      <alt>and fanatic</alt>
  </macro>

  <variable name="religion">
      <alt>Christian {#fanatic}</alt>
      <alt>Muslim {#fanatic}</alt>
      <alt>Jewish {#fanatic}</alt>
      <alt>Hindu {#fanatic}</alt>
      <alt>Buddhist {#fanatic}</alt>
      <alt>New-Age {#fanatic}</alt>
      <alt>Nature religion {#fanatic}</alt>
      <alt>{atheist} {#fanatic}</alt>
      <alt>Non-religious</alt>
  </variable>

  <variable name="edu">
      <alt>None</alt>
      <alt>Street</alt>
      <alt>By parents</alt>
      <alt>Elementary</alt>
      <alt>Highschool</alt>
      <alt>College/Gymnasium</alt>
      <alt>University</alt>
      <alt>PhD</alt>
      <alt>Professor</alt>
      <alt>Genius professor</alt>
  </variable>

  <variable name="pol">
      <alt>Liberal</alt>
      <alt>Liberal</alt>
      <alt>Liberal</alt>
      <alt>Liberal</alt>
      <alt>Conservative</alt>
      <alt>Populist</alt>
      <alt>Fascist</alt>
      <alt>Nazist</alt>
      <alt>Green</alt>
      <alt>Socialist</alt>
      <alt>Communist</alt>
      <alt>Anarchist</alt>
      <alt>Don't care</alt>
  </variable>

  <variable name="trans">
      <alt>Transvestine</alt>
      <alt>Transexual</alt>
  </variable>

  <variable name="sexuality">
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Heterosexual</alt>
      <alt>Homosexual</alt>
      <alt>{trans}</alt>
  </variable>

